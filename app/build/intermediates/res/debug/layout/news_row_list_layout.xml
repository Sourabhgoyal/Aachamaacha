<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:layout_weight=".60"
    android:paddingLeft="5dp"
    android:background="#000000"
    android:paddingTop="2dp"
    android:paddingRight="5dp"
    android:orientation="horizontal" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="1"

        android:columnCount="2"
        android:background="@drawable/screen_bg"
        android:rowCount="3" >

        <ImageView
            android:id="@+id/newsIconImage"
            android:layout_column="0"

            android:layout_row="0"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner" />

        <TextView
            android:id="@+id/newsName"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|top"
            android:layout_row="1"
            android:lines="2"
            android:padding="5dp"
            android:textColor="#4169e1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/companyName"
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/endDate"
            android:layout_column="1"
            android:layout_gravity="right|bottom"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </GridLayout>

</GridLayout><!-- From: file:/F:/aachamaacha/android%20app/for%20github/GrabThem%20(1)/GrabThem/GrabThem/app/src/main/res/layout/news_row_list_layout.xml -->