<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/bg3"
    android:fillViewport="true"

    >

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
        android:layout_marginRight="20dp"
    android:weightSum="20"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:orientation="vertical"
android:layout_weight="1"
        android:weightSum="1"
        >
<TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:text=""
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:textSize="22dp"
    android:background="#55ffffff"
android:id="@+id/headerForProperty"
    />
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_weight="3"
    android:background="@drawable/roundededittextnocolor"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="0dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
           
            

            android:id="@+id/property_type"

            android:text="Property Type"
            android:textColor="#808080"

            android:textSize="15sp"
            android:padding="5dp"
            />
        <Spinner

            android:id="@+id/spinner_propertytype"

            android:background="@drawable/roundedspinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:entries="@array/property_type"
            android:prompt="@string/Property_Type"



            

            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
           
            
            android:id="@+id/textcity"

            android:text="City"

            android:textColor="#808080"
            android:textSize="15sp"
            />
        <Spinner

android:background="@drawable/roundedspinner"

            android:id="@+id/spinner_city"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:entries="@array/City"
            android:prompt="@string/city"



            

            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
           
            android:padding="5dp"
            android:id="@+id/txtState"

            android:text="State"

            android:textColor="#808080"
            android:textSize="15sp"
            />

        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locality_locality"


            android:hint="Type State here..."
            android:paddingLeft="10dp"



            android:textSize="18sp"

            android:autoText="false" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
            android:id="@+id/textView3"
            android:text="Address"

            android:textColor="#808080"
            android:textSize="15sp"
             />
        <AutoCompleteTextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Address"

            android:hint="Type property address here"
            android:paddingLeft="10dp"
            android:lines="4"





            android:textSize="18sp"
            
            />
</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/roundededittextnocolor"
            android:layout_marginTop="20dp"
            android:weightSum="9"

            android:padding="15dp"
            >

        <TextView

            android:layout_below="@+id/googlemap_imageview"
            android:id="@+id/property_imaage_text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Upload Image"
           android:layout_weight="1"
            android:textSize="22dp"
            
            android:textColor="@android:color/white"
            android:background="#2B60DE"
            android:gravity="center"

            />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
android:layout_weight="6"
            android:scaleType="fitXY"
            android:id="@+id/property_image"

            android:src="@drawable/images"
             />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
android:layout_weight="1"
            android:id="@+id/camer_button"
            android:text="CAMERA"
            android:padding="10dp"


            />
        <Button
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/gallery_button"
            android:text="GALLERY"

              

            />
        </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="@drawable/roundededittextnocolor"
    android:layout_weight="4"
    android:padding="15dp"
    android:layout_marginTop="20dp"
    >


        <TextView

            android:id="@+id/online_propertymoredetils"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="More About Property"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
android:background="#2B60DE"
           
            
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:text="Property Area"
           
            android:padding="5dp"
            android:textColor="#000000"

            android:textSize="15sp"
            android:id="@+id/property_area"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/length"
android:layout_weight="1"
            android:hint="Length with units"
            android:textSize="18sp"

             android:padding="5dp"
            />



        <EditText

            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:hint="Breadth with units"
android:layout_weight="1"
             
            android:padding="5dp"

            android:textSize="18sp"
            
            android:id="@+id/breadth"

          >
        </EditText>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="5dp"
               
                
                android:textColor="#000000"
                android:text="Possession and Pricing"

                android:textSize="15sp"
                android:id="@+id/possesion_pricing"
                />

        <EditText
            
            android:layout_width="fill_parent"
            android:layout_height="0dp"
android:layout_weight="1"
            android:hint="Date"
            android:inputType="date"
            android:padding="5dp"
             android:editable="false"
            android:textSize="18sp"

            android:id="@+id/date">
            </EditText>
        <EditText
            
            android:layout_width="fill_parent"
            android:layout_height="0dp"
android:layout_weight="1"
            android:padding="5dp"
            android:hint="Sale Price in INR"
            android:textSize="18sp"

            android:id="@+id/pricing">

        </EditText>



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
android:padding="5dp"
            android:text="Is Negotiable"


            android:textSize="18sp"
            android:id="@+id/is_negotiable"
            android:textColor="#000000"

            />
        <CheckBox
            android:id="@+id/chkbox"

           
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:checked="true"

             />




</LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/done"
            android:text="DONE"
            android:background="#99ffffff"

            android:layout_marginBottom="5dp"
            android:gravity="center"
              


             />




    </LinearLayout>
</ScrollView>